all_rcconf: |
  sshd_enable="YES"
  pf_enable="YES"
  pflog_enable="YES"
  zfs_enable="YES"
  hostname="{{ inventory_hostname }}"
  ntpd_enable="YES"
  accounting_enable="YES"
  clear_tmp_enable="YES"
  dumpdev="AUTO"
  local_unbound_enable="YES"

all_bootloader: |
  autoboot_delay="-1"

# Ansible user information
user: phoebe
user_uid: 1003
user_home: "/home/{{ user }}"
user_shell: "{{ bash_path }}"
user_password: "{{ private_sudo_password }}"
user_group: "{{ root_group }}"

# Meta
shebang: "#!{{ user_shell }}"

# List of users allowed to login on the server.
sshd_users:
  - name: "{{ user }}"
    public_key: "ssh-rsa "

# Find out IP addresses based on inventory hostname
_clean_hostname: "{{ inventory_hostname | replace('-', '') }}"

# Public IP
_public_ip_var: "private_{{ _clean_hostname }}_public_ip"
public_ip: "{{ hostvars[inventory_hostname][_public_ip_var] }}"

# Private IP
_private_ip_var: "private_{{ _clean_hostname }}_private_ip"
_possible_private_ip1: "{{ hostvars[inventory_hostname][_private_ip_var] }}"
_possible_private_ip2: "{{ ansible_host | ipaddr }}"
private_ip: "{{ [_possible_private_ip1, _possible_private_ip2] | reject('undefined') | first}}"
